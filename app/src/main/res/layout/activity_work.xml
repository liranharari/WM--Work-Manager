<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="liran.com.wm_workmanager.WorkActivity"
    >




    <Button
        style="@style/btn_menu_logout_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:id="@+id/workAcLogout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/small"
        />

    <Button
        style="@style/btn_menu_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:id="@+id/btnMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@+id/btnAddcostumer"
        android:layout_toStartOf="@+id/listViewCustomers"
        android:layout_toRightOf="@+id/btnAddcostumer"
        android:layout_toEndOf="@+id/btnAddcostumer" />

    <Button
        style="@style/btn_addCostumer_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_costumer"
        android:id="@+id/btnAddcostumer"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp" />


    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listViewCustomers"
        android:layout_weight="50"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/workAcLogout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>
